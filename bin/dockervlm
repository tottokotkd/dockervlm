#!/usr/bin/env ruby

# require
dockervlm_path = File.dirname(File.dirname(File.realpath(__FILE__)))

puts File.join(dockervlm_path, 'lib')
$:.unshift File.join(dockervlm_path, 'lib')
require 'root'
require 'dockervlm_config'

def main(mode, params, config)
  root(mode, params, config)
end

default_config_path = File.join(dockervlm_path, 'config.yml')
docker_compose_path = 'docker-compose.yml'
config = DockervlmConfig.new(default_config_path, docker_compose_path)

mode = ARGV[0]
params = ARGV.drop(1)

main(mode, params, config)
