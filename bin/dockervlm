#!/usr/bin/env ruby

# require
$:.unshift File.join(File.dirname(__FILE__), '../lib')
require 'root'
require 'default_config'

def main(mode, params, default_config)
  root(mode, params, default_config)
end

mode = ARGV[0]
params = ARGV.drop(1)
config_path = File.join(File.dirname(__FILE__), '../config.yml')
default_config = DefaultConfig.new(config_path)

main(mode, params, default_config)
